{
  "name": "coredxp",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run cmp\" \"sleep 2 && node server\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest",
    "build:server": "vite build --ssr src/entry-server.js",
    "cmp": "dxp-next cmp dev-ui ./dxp/component-service",
    "build-toc": "npx run-func src/scripts/build-scripts/build-component-toc.js buildComponetToc",
    "test": "vitest --coverage",
    "lint:css": "stylelint \"**/*.scss\"",
    "lint:css:fix": "stylelint \"**/*.scss\" --fix",
    "prettier": "npx prettier .",
    "prettier:fix": "npx prettier . --write",
    "vermgmt": "vermgmt",
    "lint:js": "eslint dxp/component-service src/scripts",
    "lint:js:fix": "eslint dxp/component-service src/scripts --fix",
    "deploy": "npm run deploy:component --",
    "deploy:component": "FEATURE_EDGE_COMPONENTS=true dxp-next cmp deploy ./dxp/component-service/$npm_config_name",
    "all-tests": "npm run lint:css && npm run lint:js && vitest run",
    "deploy:all-tests": "npm run all-tests && npm run deploy"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@squiz/component-lib": "^1.78.1",
    "@squiz/dxp-cli-next": "^5.22.0",
    "@vitest/coverage-v8": "^2.1.9",
    "compression": "^1.7.4",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.31.0",
    "express": "^4.19.2",
    "glob": "^11.0.0",
    "happy-dom": "^15.11.7",
    "globals": "^15.12.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "sass": "^1.79.5",
    "sirv": "^2.0.4",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "vite": "^5.2.10",
    "vite-plugin-sass-glob-import": "^4.0.0",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@squiz/vermgmt": "^1.0.2",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "xss": "^1.0.15"
  }
}