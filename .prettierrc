{
    "arrowParens": "always",
    "bracketSpacing": false,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "printWidth": 180,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "vueIndentScriptAndStyle": false,
    "overrides": [
        {
            "files": "**/*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "**/*.scss",
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        }
    ],    
    "plugins": ["prettier-plugin-tailwindcss"]
}
